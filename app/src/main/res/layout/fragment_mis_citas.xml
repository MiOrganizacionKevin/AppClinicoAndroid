<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MisCitasFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrincipal">

        <View
            android:id="@+id/containerBackground"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/container_center_border"/>

        <TextView
            android:id="@+id/misCitasText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Citas"
            android:textSize="24sp"
            android:layout_alignTop="@+id/containerBackground"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerMisCitas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/misCitasText"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="4dp"
            />

    </RelativeLayout>

</FrameLayout>